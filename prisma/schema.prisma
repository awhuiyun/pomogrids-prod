generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id String @id
  email String @unique
  tier String

  stripeCustomerId String?
  stripeSubscriptionStatus String?

  tasks Task[]
  settings Settings?
}

model Task {
  id String @id
  task_name String
  target_num_of_sessions Int
  is_archived Boolean
  category_name String?
  category_colour String?
  user_id String
  user User @relation(fields: [user_id], references: [id])
  sessions Tasks_session[]

  @@index([user_id])
}

model Tasks_session {
  session_id Int @id @default(autoincrement())
  task_id String
  number_of_sessions Int
  number_of_minutes Int
  date_of_session String
  year_of_session Int
  month_of_session Int
  day_of_session Int
  task Task @relation(fields: [task_id], references: [id])
  
  @@unique([task_id, year_of_session, month_of_session, day_of_session])
  @@index([task_id])
}

model Settings {
  user_id String @id @unique
  pomodoro_minutes Int
  short_break_minutes Int
  long_break_minutes Int
  number_of_sessions_in_a_cycle Int
  alarm_ringtone String
  alarm_volume Float
  week_start String
  user User @relation(fields: [user_id], references: [id])
}